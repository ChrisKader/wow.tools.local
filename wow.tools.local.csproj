<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RepositoryUrl>https://github.com/Marlamin/wow.tools.local</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Version>0.3.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="cache\**" />
    <Compile Remove="CascLib\**" />
    <Compile Remove="DBCD\**" />
    <Compile Remove="dbcs\**" />
    <Compile Remove="DBDiffer\**" />
    <Compile Remove="SereniaBLPLib\**" />
    <Compile Remove="temp\**" />
    <Compile Remove="WoWDBDefs\**" />
    <Compile Remove="WoWFormatLib\**" />
    <Content Remove="cache\**" />
    <Content Remove="CascLib\**" />
    <Content Remove="DBCD\**" />
    <Content Remove="dbcs\**" />
    <Content Remove="DBDiffer\**" />
    <Content Remove="SereniaBLPLib\**" />
    <Content Remove="temp\**" />
    <Content Remove="WoWDBDefs\**" />
    <Content Remove="WoWFormatLib\**" />
    <EmbeddedResource Remove="cache\**" />
    <EmbeddedResource Remove="CascLib\**" />
    <EmbeddedResource Remove="DBCD\**" />
    <EmbeddedResource Remove="dbcs\**" />
    <EmbeddedResource Remove="DBDiffer\**" />
    <EmbeddedResource Remove="SereniaBLPLib\**" />
    <EmbeddedResource Remove="temp\**" />
    <EmbeddedResource Remove="WoWDBDefs\**" />
    <EmbeddedResource Remove="WoWFormatLib\**" />
    <None Remove="cache\**" />
    <None Remove="CascLib\**" />
    <None Remove="DBCD\**" />
    <None Remove="dbcs\**" />
    <None Remove="DBDiffer\**" />
    <None Remove="SereniaBLPLib\**" />
    <None Remove="temp\**" />
    <None Remove="WoWDBDefs\**" />
    <None Remove="WoWFormatLib\**" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="WoWDBDefs\definitions\**" LinkBase="definitions\" CopyToOutputDirectory="Always" />
  </ItemGroup>

  <ItemGroup>
    <None Include="wwwroot\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  
  <ItemGroup>
    <None Remove="debug.log" />
    <None Remove="WTL.db" />
    <None Remove="WTL.db-journal" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.NewtonsoftJson" Version="8.0.0" />
    <PackageReference Include="Microsoft.Data.Sqlite" Version="8.0.1" />
    <PackageReference Include="SixLabors.ImageSharp" Version="3.1.2" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="CascLib\CascLib\CascLib.csproj" />
    <ProjectReference Include="DBCD\DBCD\DBCD.csproj" />
    <ProjectReference Include="DBDiffer\DBDiffer\DBDiffer.csproj" />
    <ProjectReference Include="SereniaBLPLib\SereniaBLPLib\SereniaBLPLib.csproj" />
    <ProjectReference Include="WoWFormatLib\WoWFormatLib\WoWFormatLib.csproj" />
  </ItemGroup>
  
  <ItemGroup>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
